<tr>
	<td class="gravatar">
		<%= link_to gravatar_for(feed_item.user), feed_item.user %>
	</td>
	<td class="micropost">
		<span>
			<strong><%= feed_item.user.name %></strong>
		</span>
		<br/>
		<span><%= feed_item.content %></span>
		<span class="timestamp">
			Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
		</span>
	</td>
	<% if current_user?(feed_item.user) %>
		<td>
			<%= button_to "delete", feed_item, :method => :delete, :confirm => "Are you sure?", :title => feed_item.content %>
		</td>
	<% end %>
</tr>