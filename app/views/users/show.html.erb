
<% unless @user.microposts.empty? %>

<div class="status info">
   	<p class="closestatus"><a href="" title="Close">x</a></p>
   	<p><%= image_tag("cp/icons/icon_info.png") %><span>Information:</span> You have currently posted <%= pluralize(@user.microposts.count, "micropost") %>.</p>
   </div>
<% end %>

<div class="contentcontainer med left">
      	<div class="headings altheading">
          <h2>Send a message to your tenants</h2>
      	</div>
      <div class="contentbox">
		<%= render 'shared/micropost_form' %>
	  </div>
</div>

<div class="contentcontainer med left">
      	<div class="headings altheading">
          <h2>Current Messages</h2>
      	</div>
      <div class="contentbox">
		<%= render 'shared/feed' %>
	  </div>
</div>

<%= render 'follow_form' if signed_in? %>

