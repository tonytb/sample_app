<table summary="Information about following/followers">
	<tr>
		<td class="main">
			<h1><%= @title %></h1>
				
				<% unless @users.empty? %>
					<ul class="users">
						<%= render @users %>
					</ul>
					<%= will_paginate @users %>
				<% end %>
		</td>
		<td class="sidebar round">
			
			<% unless @users.empty? %>
				<% @users.each do |user| %>
					
				<% end %>
			<% end %>
			
			<% if current_user.following?(@user) %>
				<%= render 'unfollow' %>
			<% else %>
				<%= render 'follow' %>
			<% end %>
		</td>
	</tr>
</table>